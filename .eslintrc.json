{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "dist",
    "node_modules",
    "*.d.ts",
    "apidocs.json",
    "tsconfig.json",
    "package.json",
    "package-lock.json"
  ],
  "rules": {
    "@typescript-eslint/space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-useless-constructor": "error",
    "camelcase": "off",
    "no-unused-vars": "warn",
    "callback-return": ["warn", ["warn", "callback", "next"]]
  }
}
